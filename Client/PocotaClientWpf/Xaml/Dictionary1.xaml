<ResourceDictionary 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:l="clr-namespace:Net.Leksi.WpfMarkup;assembly=Net.Leksi.WpfMarkupExtension"
        xmlns:local="clr-namespace:Net.Leksi.Pocota.Client"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
    <local:MultiValueToArrayConverter x:Key="MultiValueToArrayConverter"/>
    <Style TargetType="TextBox" x:Key="DataGridCellTextBoxStyle">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>
    <l:StyleCombiner TargetType="TextBox" x:Key="ReadonlyDataGridCellTextBoxStyle">
        <StaticResource ResourceKey="DataGridCellTextBoxStyle"/>
        <Style TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>
    </l:StyleCombiner>
    <l:StyleCombiner TargetType="Button" x:Key="ActionButtonStyle">
        <Style TargetType="Button">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </l:StyleCombiner>
    <l:StyleCombiner TargetType="Button" x:Key="PlayButtonStyle">
        <StaticResource ResourceKey="ActionButtonStyle"/>
        <Style TargetType="Button">
            <Setter Property="Content" Value="▶"/>
            <Setter Property="ToolTip" Value="Вызвать"/>
        </Style>
    </l:StyleCombiner>
    <l:StyleCombiner TargetType="Button" x:Key="ActionToggleButtonStyle">
        <Style TargetType="Button">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </l:StyleCombiner>
    <l:StyleCombiner TargetType="Button" x:Key="SortButtonStyle">
        <StaticResource ResourceKey="ActionToggleButtonStyle"/>
        <Style TargetType="Button">
            <Style.Triggers>
                <l:DataSwitch Binding="{
                    Binding 
                    Tag, 
                    RelativeSource={RelativeSource Self}, 
                    Converter={l:ParameterizedResource $converter}, 
                    ConverterParameter=tag
                    }">
                    <DataTrigger  Value="False">
                        <Setter Property="Content" Value="⇈"/>
                        <Setter Property="ToolTip" Value="По возрастанию"/>
                    </DataTrigger>
                    <DataTrigger Value="True">
                        <Setter Property="Content" Value="⇊"/>
                        <Setter Property="ToolTip" Value="По убыванию"/>
                    </DataTrigger>
                    <DataTrigger Value="{x:Null}">
                        <Setter Property="Content" Value="⇵"/>
                        <Setter Property="ToolTip" Value="Не сортировано"/>
                    </DataTrigger>
                </l:DataSwitch> 
            </Style.Triggers>
        </Style>
    </l:StyleCombiner>
    <DataTemplate x:Key="SortHeader" x:Shared="False">
        <DataTemplate.Resources>
            <l:BindingProxy x:Key="Field" Value="{l:ParameterizedResource $field, AsValueOfType=sys:String}"/>
        </DataTemplate.Resources>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Source={l:ParameterizedResource $name, AsValueOfType={x:Type sys:String}}}"/>
            <Button 
                Style="{l:ParameterizedResource SortButtonStyle}" 
                Command="{Binding Value, Source={l:ParameterizedResource $command}}"
                >
                <Button.CommandParameter>
                    <MultiBinding Converter="{StaticResource MultiValueToArrayConverter}">
                        <MultiBinding.Bindings>
                            <Binding RelativeSource="{RelativeSource Self}"/>
                            <Binding Path="Value" Source="{l:ParameterizedResource Field}"/>
                        </MultiBinding.Bindings>
                    </MultiBinding>
                </Button.CommandParameter>
            </Button>
            <StackPanel Orientation="Horizontal" Visibility="{
                Binding 
                Value.Notification,
                Source={l:ParameterizedResource $command},
                Mode=OneWay, 
                Converter={l:ParameterizedResource $converter}, 
                ConverterParameter=sortPositionVisibility
                }">
                <TextBlock Text="["/>
                <TextBlock Text="{
                    Binding 
                    Value.Notification,
                    Source={l:ParameterizedResource $command},
                    Mode=OneWay, 
                    Converter={l:ParameterizedResource $converter}, 
                    ConverterParameter=sortPositionText
                    }" />
                <TextBlock Text="]"/>
            </StackPanel>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>