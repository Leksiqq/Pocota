<UserControl 
    x:Class="Net.Leksi.Pocota.Client.UserControls.TextField"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Net.Leksi.Pocota.Client"
    xmlns:uc="clr-namespace:Net.Leksi.Pocota.Client.UserControls"
    xmlns:l="clr-namespace:Net.Leksi.WpfMarkup;assembly=Net.Leksi.WpfMarkupExtension"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    x:Name="tf"
    >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Xaml/Dictionaries/Dictionary1.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <l:ConverterProxy Converter="{Binding  ElementName=tf}" x:Key="Converter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Top">
            <Button 
                x:Name="IncreaseTextButton"
                Margin="0" 
                Style="{StaticResource IncreaseButtonStyle}"
                Command="{Binding ElementName=tf}"
                CommandParameter="Increase"
                />
            <Button 
                x:Name="DecreaseTextButton"
                Margin="0" 
                Style="{StaticResource DecreaseButtonStyle}"
                Command="{Binding ElementName=tf}"
                CommandParameter="Decrease"
                />
            <Button 
                x:Name="UndoButton"
                Margin="0" 
                Style="{StaticResource UndoButtonStyle}"
                Command="{Binding ElementName=tf}"
                CommandParameter="Undo"
                />
            <Button 
                Margin="0" 
                Style="{StaticResource ClearButtonStyle}"
                Command="{Binding ElementName=tf}"
                CommandParameter="Clear"
                />
        </StackPanel>
        <TextBox 
            x:Name="TextBox"
            Text="{Binding Value, Converter={StaticResource Converter}, ConverterParameter=Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            IsReadOnly="{Binding IsReadonly}"
            TextWrapping="Wrap"
            Foreground="{Binding Value, Converter={StaticResource Converter}, ConverterParameter=Foreground, Mode=OneWay}"
            BorderBrush="{Binding Value, Converter={StaticResource Converter}, ConverterParameter=Foreground, Mode=OneWay}"
            KeyUp="TextBox_KeyUp"
            GotFocus="TextBox_GotFocus"
            LostFocus="TextBox_LostFocus"
            TextChanged="TextBox_TextChanged"
            PreviewTextInput="TextBox_PreviewTextInput"
            >
        </TextBox>
    </DockPanel>
</UserControl>
